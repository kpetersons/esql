.home-container{:style=> 'margin-top:20%'}
  .well
    = form_for @user, :html => {:class => 'form-horizontal'} do |form|
      %fieldset
        %legend Sign up
        =render :partial => '/flash', :locals => {:flash => flash}  
        =render :partial => '/users/form', :locals => {:form => form}
        .form-actions
          = form.submit "Sign up", :class => 'btn btn-primary pull-right'